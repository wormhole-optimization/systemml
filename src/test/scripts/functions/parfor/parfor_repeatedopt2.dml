V = read($1,rows=$2,cols=$3);
n = $3;

R = matrix(0, rows=1,cols=n); 

iter = 1;
while( iter <= 3 )
{
   if( $5==1 )
   {
      V = V * iter;
   }

   #repeated opt for each while iteration
   parfor( i in 1:ncol(V), log=DEBUG, opt=CONSTRAINED, par=8 )
   {
      Xi = V[,i];
      R[1,i] = R[1,i] + sum(Xi);
   }
   
   iter = iter+1;
}

write(R, $4);       